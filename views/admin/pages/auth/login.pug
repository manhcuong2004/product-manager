extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main
    .container.my-5 
        .row.justify-content-center 
            .col-8
                h1 Đăng nhập
                +alert-error(4000)
                form(
                    action=`${prefixAdmin}/auth/login`
                    method="POST"
                )
                    div(class="form-group")
                            label(for="email") Email *
                            input(
                                type="email"
                                class="form-control"
                                id="email"
                                name="email"
                                required
                                )
                    div(class="form-group")
                        label(for="password") Mật khẩu *
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                            )
                    div(class="form-group")
                            button( 
                                type="submit"    
                                class="btn btn-primary"
                                ) Tạo mới
