extends ../../layouts/default.pug
block main 
    h1 Danh sách sản phẩm 

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm
        .card-body 
            button(
                class="btn btn-sm ml-1 btn-outline-success active"
            ) Tất cả
            button(
                class="btn btn-sm ml-1 btn-outline-success"
            ) Hoạt động
            button(
                class="btn btn-sm ml-1 btn-outline-success active"
            ) Dừng hoạt động
    table
        thead
            tr
                th STT
                th Hình Ảnh
                th Tiêu đề
                th Giá
                th Trạng thái
                th Hành động
            tbody  
                each item, index in products    
                    tr 
                        td #{idex + 1 }
                        td 
                            img(
                                source=item.thumbnail
                                alt=item.title
                                width="100px"
                                height="auto"
                            )
                        td #{item.title}
                        td #{item.price}
                        td 
                            if(item.status=="active")
                                a(href='#' class="badge badge-success") Hoạt động
                            else 
                                a(href='#' class="badge badge-danger") Dừng hoạt động
                        td
                            button(class="btn btn-warning btn-sm") Sửa
                            button(class="btn btn-danger btn-sm ml-1") Xóa

            