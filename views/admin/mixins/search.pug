mixin find-product(keyword)
    form(id="form-search") 
        .input-group
            input(
                type="text"
                placehoder="Nhập từ khóa"
                name="keyword"
                class="form-control"
                value=keyword
            )
            .input-group-append
                button(
                    type="submit"
                    class="btn btn-success"
                ) Tìm