mixin alert-success(time)
    - if(messages.success)
        .message.info
            div(
                class="alert alert-success"
                show-alert 
                data-time=time
            ) #{messages.success}

mixin alert-error(time)
    - if(messages.error)
        .message.info
            div(
                class="alert alert-error"
                show-alert 
                data-time=time
            ) #{messages.error}