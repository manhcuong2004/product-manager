extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(4000)
    .container.my-5 
        .row.justify-content-center 
            .col-8
                h1 Đăng kí tài khoản
                form(
                    action=`/user/register`
                    method="POST"
                )
                    div(class="form-group")
                            label(for="fullname") Họ và tên
                            input(
                                type="text"
                                class="form-control"
                                id="fullname"
                                name="fullname"
                                required
                                )
                    div(class="form-group")
                            label(for="email") Email *
                            input(
                                type="email"
                                class="form-control"
                                id="email"
                                name="email"
                                required
                                )
                    div(class="form-group")
                        label(for="password") Mật khẩu *
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                            )
                    div(class="form-group")
                            button( 
                                type="submit"    
                                class="btn btn-primary"
                                ) Đăng kí
