extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3
        include ../../partials/list-btn-users.pug

        .row 
            .col-12 
                +box-head("Chat")
        .row 
            .col-12 
                .chat 
                    .inner-body(my-id=user.id)
                        each chat in chats
                            div(class=(chat.user_id == user.id ? "inner-outgoing":"inner-incoming"))
                                if(chat.user_id != user.id)
                                    .inner-name #{chat.infoUser.fullname}
                                .inner-content 
                                    | #{chat.content}
                        div(class="inner-list-typing")
                            div(class="box-typing")
                                
                    .inner-foot 
                        form(
                            class="inner-form"
                            action=""
                        )
                            input(
                                type="text"
                                placeholder="Nhập nội dung..."
                                name="content"
                            )
                            //- div(class="custom-file-container" 
                            //-     data-upload-id="upload-images")
                            span(class="button-icon btn btn-light mx-2") <i class="fa-solid fa-face-smile"></i>
                            button 
                                i.fa-solid.fa-paper-plane
    div(class="tooltip" role="tooltip")
        emoji-picker

    block script
        script(type="module" src="/js/chat.js") 